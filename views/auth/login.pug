extends ../layout/index

block contenido
    div.py-10
        h2.text-center.font-extrabold.my-10.font-4xl.text-purple-600 Bienes
            span.font-normal.text-black Raices

                h2.text-center.font-extrabold.font-2xl Inicia Sesion 
        
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5
                    div
                         label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de Registro
                            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")

                    div.mb-4
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password
                            input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Password" type="password" name="password")

                    div.flex.items-center.justify-between.mb-4
                            a.text-gray-500.text-xs(href="/usuario/createAccount" class="hover:underline hover:decoration-2 hover:decoration-indigo-600") ¿No tienes una cuenta? Crea una
                            a.text-gray-500.text-xs(href='/usuario/passwordRecovery' class="hover:underline hover:decoration-2 hover:decoration-indigo-600") Olvide mi contraseña

                    input(class="w-full bg-purple-600 hover:bg-indigo-700 text-white font- py-3 cursor-pointer" type="submit" value="Iniciar Sesion")